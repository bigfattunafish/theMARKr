<% counter = 0 %>
<% @places.each do |place| %>
  <% counter += 1 %>
  <div class="row-fluid list_margin_bump">
      <div class="span1">
        <% if place["image_url"].nil? %>
          <%= image_tag("NotAvailable.jpg", class: "img-polaroid", size: "50x50") %>
        <% else %>
          <%= image_tag(place["image_url"], class: "img-polaroid", size: "50x50") %>
        <% end %>
      </div>

      <div class="span3">
        <div class="big_bright_font">
          <%= counter %>.
          <%= link_to "#{place.name}", "/#{params[:user_id]}/#{place.id}"  %>
        </div>
        <img src="<%= place["rating_img_url"] %>">
        (<%= place["rating"] %>) |
        <%= place["review_count"] %> reviews
      </div>

      <div class="span5">
        <%= place["tags"].to_sentence(words_connector: ", ", last_word_connector: ", ", two_words_connector: ", ") unless place["categories"].nil? %>
      </div>

  </div>
<% end %>
